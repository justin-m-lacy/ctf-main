{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "types": [
      "node"
    ],
    "strict": true,
    "allowJs": true,
    "outDir": "./build",
    "declaration": true,
    "resolveJsonModule": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./src/**/*",
    "src/main.ts",
    "assets/**/*.json",
    "assets-ctf/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "./build/**/*",
  ]
}